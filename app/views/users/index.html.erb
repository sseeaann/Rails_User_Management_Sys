<div class="container">
	<h1>Listing users</h1>
	<a href="/users/new" class="btn btn-primary">Add New User</a>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<td>First Name</td>
				<td>Last Name</td>
				<td>Email</td>
				<td>Actions</td>
			</tr>
		</thead>
		<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.first_name %></td>
				<td><%= user.last_name %></td>
				<td><%= user.email_address %></td>
				<td><a href="/users/<%= user[:id] %>" class="btn btn-info">Show</a> <a href="/users/<%= user[:id] %>/edit" class="btn btn-warning">Edit</a> 
				<form action="/users/<%= user[:id]%>" method="post" class="deleteForm">
					<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
					<input type="hidden" name="_method" value="delete">
					<input type="submit" class="btn btn-danger" value="Delete">
				</form>
				</td>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>